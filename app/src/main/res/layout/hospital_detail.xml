<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="50dp"
    android:layout_marginHorizontal="30dp"
    android:orientation="vertical"
    android:gravity="center">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        android:backgroundTint="@color/white"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/p1"
                                android:layout_width="300dp"
                                android:layout_height="180dp"
                                android:src="@drawable/r3"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center_horizontal" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        android:backgroundTint="@color/white"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/p2"
                                android:layout_width="300dp"
                                android:layout_height="180dp"
                                android:src="@drawable/r3"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center_horizontal" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        android:backgroundTint="@color/white"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/p3"
                                android:layout_width="300dp"
                                android:layout_height="180dp"
                                android:src="@drawable/r3"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center_horizontal" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/hospitalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Hospital Name"
                android:textColor="#27445D"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/hospitalAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Healing Hub is a renowned hospital focusing on holistic treatments and advanced healthcare solutions. It combines traditional and modern medicine to ensure the best patient outcomes."
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/hospitalLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It combines traditional and modern medicine to ensure the best patient outcomes."
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialization"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/hospitalSpec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gynecology\nOncology (Cancer Treatment)\nEndocrinology\nRheumatology."
                android:textSize="18dp"
                android:lineHeight="25dp"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctors"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/hospitalDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It combines traditional and modern medicine to ensure the best patient outcomes."
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timings"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/hospitalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It combines traditional and modern medicine to ensure the best patient outcomes."
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/back2"
                android:backgroundTint="#27445D"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
